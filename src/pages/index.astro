---
import Layout from '../layouts/Layout.astro'
import Button from '../components/buttons/Button.astro'
---

<Layout title="Welcome to Astro.">
    <main class="select-none overflow-hidden">
        <div class="flex h-screen w-screen flex-col overflow-y-scroll">
            <div class="h-full bg-zinc-950 text-zinc-50">
                <div class="flex h-full w-full flex-col items-center justify-center gap-4 px-2">
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button>Default Solid</Button>
                        <Button type='bordered'>Default Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button color='primary'>Primary Solid</Button>
                        <Button color='primary' type='bordered'>Primary Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button color='secondary'>Secondary Solid</Button>
                        <Button color='secondary' type='bordered'>Secondary Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button color='success'>Success Solid</Button>
                        <Button color='success' type='bordered'>Success Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button color='error'>Error Solid</Button>
                        <Button color='error' type='bordered'>Error Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <Button color='primary' shadow>Shadow Solid</Button>
                        <Button color='primary' type='bordered' shadow>Shadow Bordered</Button>
                    </div>
                    <div class="flex flex-row w-full items-center justify-center gap-4">
                        <div class="flex flex-row w-full justify-end items-center gap-4">
                            <p>Icon Solid</p>
                            <Button color='primary' icon>
                                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24" fill="currentColor">
