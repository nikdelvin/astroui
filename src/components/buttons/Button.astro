---
interface Props {
    color?: 'default' | 'primary' | 'secondary' | 'success' | 'error'
    type?: 'solid' | 'bordered'
    size?: 'small' | 'medium' | 'large'
    shadow?: boolean
    icon?: boolean
}

const { color = 'default', type = 'solid', size = 'medium', shadow = false, icon = false } = Astro.props
---

<div
    data-color={color}
    data-type={type}
    data-size={size}
    data-shadow={shadow}
    data-icon={icon}
    class="group/button relative inline-flex w-full max-w-[300px] items-center justify-center overflow-hidden rounded-full bg-gradient-to-r p-[1px]
    data-[icon]:aspect-square data-[icon]:h-auto data-[icon]:w-auto
    data-[color=default]:from-slate-500/50 data-[color=error]:from-pink-500/50 data-[color=primary]:from-cyan-500/50
    data-[color=secondary]:from-purple-500/50 data-[color=success]:from-teal-500/50 data-[color=default]:via-gray-500/50
    data-[color=error]:via-rose-500/50 data-[color=primary]:via-sky-500/50 data-[color=secondary]:via-violet-500/50
    data-[color=success]:via-emerald-500/50 data-[color=default]:to-zinc-500/50 data-[color=error]:to-red-500/50
    data-[color=primary]:to-blue-500/50 data-[color=secondary]:to-indigo-500/50
    data-[color=success]:to-green-500/50 data-[size=large]:text-lg
    data-[size=medium]:text-base data-[size=small]:text-sm
    data-[shadow]:shadow-xl data-[color=default]:data-[type=bordered]:data-[shadow]:shadow-gray-500/15
    data-[color=default]:data-[type=solid]:data-[shadow]:shadow-gray-500/25 data-[color=error]:data-[type=bordered]:data-[shadow]:shadow-rose-500/15
    data-[color=error]:data-[type=solid]:data-[shadow]:shadow-rose-500/25 data-[color=primary]:data-[type=bordered]:data-[shadow]:shadow-sky-500/15
    data-[color=primary]:data-[type=solid]:data-[shadow]:shadow-sky-500/25 data-[color=secondary]:data-[type=bordered]:data-[shadow]:shadow-violet-500/15
    data-[color=secondary]:data-[type=solid]:data-[shadow]:shadow-violet-500/25 data-[color=success]:data-[type=bordered]:data-[shadow]:shadow-emerald-500/15
    data-[color=success]:data-[type=solid]:data-[shadow]:shadow-emerald-500/25"
>
    <div
        class="inline-flex w-full items-center justify-center rounded-full bg-gradient-to-r p-[2px]
        group-data-[color=default]/button:from-slate-800/75 group-data-[color=error]/button:from-pink-950/75 group-data-[color=primary]/button:from-cyan-950/75
        group-data-[color=secondary]/button:from-purple-950/75 group-data-[color=success]/button:from-teal-950/75 group-data-[color=default]/button:via-gray-800/75
        group-data-[color=error]/button:via-rose-950/75 group-data-[color=primary]/button:via-sky-950/75 group-data-[color=secondary]/button:via-violet-950/75
        group-data-[color=success]/button:via-emerald-950/75 group-data-[color=default]/button:to-zinc-800/75 group-data-[color=error]/button:to-red-950/75
        group-data-[color=primary]/button:to-blue-950/75 group-data-[color=secondary]/button:to-indigo-950/75 group-data-[color=success]/button:to-green-950/75"
    >
        <div
            class="inline-flex w-full items-center justify-center rounded-full bg-gradient-to-r
            group-data-[color=default]/button:group-data-[type=bordered]/button:from-slate-800 group-data-[color=default]/button:group-data-[type=solid]/button:from-slate-500 group-data-[color=error]/button:group-data-[type=bordered]/button:from-pink-950
            group-data-[color=error]/button:group-data-[type=solid]/button:from-pink-500 group-data-[color=primary]/button:group-data-[type=bordered]/button:from-cyan-950 group-data-[color=primary]/button:group-data-[type=solid]/button:from-cyan-500
            group-data-[color=secondary]/button:group-data-[type=bordered]/button:from-purple-950 group-data-[color=secondary]/button:group-data-[type=solid]/button:from-purple-500 group-data-[color=success]/button:group-data-[type=bordered]/button:from-teal-950
            group-data-[color=success]/button:group-data-[type=solid]/button:from-teal-500 group-data-[color=default]/button:group-data-[type=bordered]/button:via-gray-800 group-data-[color=default]/button:group-data-[type=solid]/button:via-gray-500
            group-data-[color=error]/button:group-data-[type=bordered]/button:via-rose-950 group-data-[color=error]/button:group-data-[type=solid]/button:via-rose-500 group-data-[color=primary]/button:group-data-[type=bordered]/button:via-sky-950
            group-data-[color=primary]/button:group-data-[type=solid]/button:via-sky-500 group-data-[color=secondary]/button:group-data-[type=bordered]/button:via-violet-950 group-data-[color=secondary]/button:group-data-[type=solid]/button:via-violet-500
            group-data-[color=success]/button:group-data-[type=bordered]/button:via-emerald-950 group-data-[color=success]/button:group-data-[type=solid]/button:via-emerald-500 group-data-[color=default]/button:group-data-[type=bordered]/button:to-zinc-800
            group-data-[color=default]/button:group-data-[type=solid]/button:to-zinc-500 group-data-[color=error]/button:group-data-[type=bordered]/button:to-red-950 group-data-[color=error]/button:group-data-[type=solid]/button:to-red-500
            group-data-[color=primary]/button:group-data-[type=bordered]/button:to-blue-950 group-data-[color=primary]/button:group-data-[type=solid]/button:to-blue-500 group-data-[color=secondary]/button:group-data-[type=bordered]/button:to-indigo-950
            group-data-[color=secondary]/button:group-data-[type=solid]/button:to-indigo-500 group-data-[color=success]/button:group-data-[type=bordered]/button:to-green-950 group-data-[color=success]/button:group-data-[type=solid]/button:to-green-500"
        >
            <button
                class="inline-flex w-full select-none appearance-none items-center justify-center gap-2 overflow-hidden whitespace-nowrap rounded-full px-4 py-2 antialiased group-data-[type=bordered]/button:bg-zinc-950/75 group-data-[type=solid]/button:bg-transparent
                group-data-[icon]/button:p-2 group-data-[color=default]/button:group-data-[type=bordered]/button:text-gray-500 group-data-[color=error]/button:group-data-[type=bordered]/button:text-rose-500 group-data-[color=primary]/button:group-data-[type=bordered]/button:text-sky-500
                group-data-[color=secondary]/button:group-data-[type=bordered]/button:text-violet-500 group-data-[color=success]/button:group-data-[type=bordered]/button:text-emerald-500 group-data-[type=solid]/button:text-zinc-50"
            >
                <slot />
            </button>
        </div>
    </div>
</div>
